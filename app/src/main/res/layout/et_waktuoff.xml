<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:textAlignment="center"
        android:text="WAKTU OFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Jam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <io.github.handharbeni.wheelview_module.WheelPicker
                app:wheel_item_text_size="25sp"
                app:wheel_cyclic="false"
                app:wheel_atmospheric="true"
                app:wheel_curved="true"
                app:wheel_indicator_size="2dp"
                app:wheel_indicator_color="@color/colorPrimaryDark"
                app:wheel_indicator="true"
                app:wheel_data="@array/jam"
                app:wheel_item_space="100dp"
                android:id="@+id/JamOff"
                android:layout_width="50dp"
                android:layout_height="150dp" />

            <!--<Spinner-->
                <!--android:id="@+id/JamOff"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:spinnerMode="dropdown"-->
                <!--tools:entries="@array/jam" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Menit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--<com.dpizarro.uipicker.library.picker.PickerUI-->
                <!--android:id="@+id/MenitOff"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->
            <io.github.handharbeni.wheelview_module.WheelPicker
                app:wheel_item_text_size="25sp"
                app:wheel_cyclic="false"
                app:wheel_atmospheric="true"
                app:wheel_curved="true"
                app:wheel_indicator_size="2dp"
                app:wheel_indicator_color="@color/colorPrimaryDark"
                app:wheel_indicator="true"
                app:wheel_item_space="100dp"
                app:wheel_data="@array/menit"
                android:id="@+id/MenitOff"
                android:layout_width="50dp"
                android:layout_height="150dp" />
            <!--<Spinner-->
                <!--android:id="@+id/MenitOff"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:spinnerMode="dropdown"-->
                <!--tools:entries="@array/menit" />-->
        </LinearLayout>
    </LinearLayout>


</LinearLayout>